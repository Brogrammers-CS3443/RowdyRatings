<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/utsaBlue"
    tools:context=".CreateReviewActivity">


    <TextView
        android:id="@+id/classNum"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="Enter Class Number"
        android:textColor="@color/utsaOrange"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/takeClassAgain"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="536dp"
        android:text="Would you take the class again?"
        android:textColor="@color/utsaOrange"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chipTakeClassAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="88dp"
        android:checkable="true"
        app:layout_constraintStart_toEndOf="@+id/mandatoryClass"
        app:layout_constraintTop_toBottomOf="@+id/courseGradeBox" />

    <EditText
        android:id="@+id/courseGradeBox"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="400dp"
        android:ems="10"
        android:hint="Ex: A+"
        android:inputType="text"
        android:text=""
        android:textColorHint="@color/cardview_light_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/profName"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="156dp"
        android:text="Enter Professor Name"
        android:textColor="@color/utsaOrange"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/courseGrade"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="408dp"
        android:text="Enter grade"
        android:textColor="@color/utsaOrange"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/profNameBox"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="204dp"
        android:layout_marginTop="156dp"
        android:ems="10"
        android:hint="Prof Name"
        android:inputType="text"
        android:text=""
        android:textColorHint="@color/cardview_light_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/courseRating"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="324dp"
        android:text="Enter overall course rating"
        android:textColor="@color/utsaOrange"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RatingBar
        android:id="@+id/courseRatingInput"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="188dp"
        android:layout_marginTop="324dp"
        android:layout_marginEnd="20dp"
        android:numStars="5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RatingBar
        android:id="@+id/difficultyRatingInput"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="188dp"
        android:layout_marginTop="248dp"
        android:layout_marginEnd="20dp"
        android:numStars="5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/difficultyRating"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="248dp"
        android:text="Enter Difficulty (1-5)"
        android:textColor="@color/utsaOrange"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chipMandatory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:checkable="true"
        app:layout_constraintStart_toEndOf="@+id/mandatoryClass"
        app:layout_constraintTop_toBottomOf="@+id/courseGradeBox" />

    <TextView
        android:id="@+id/mandatoryClass"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="464dp"
        android:text="Was class mandatory?"
        android:textColor="@color/utsaOrange"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/classNumBox"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="204dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Class Number"
        android:inputType="text"
        android:text=""
        android:textColorHint="@color/cardview_light_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <EditText
        android:id="@+id/reviewWriteupBox"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginStart="184dp"
        android:layout_marginTop="612dp"
        android:ems="10"
        android:hint="Enter Thoughts Here (max 250 characters)"
        android:inputType="text"
        android:text=""
        android:textColorHint="@color/cardview_light_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <TextView
        android:id="@+id/reviewWriteup"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="616dp"
        android:text="Enter your thoughts on course"
        android:textColor="@color/utsaOrange"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="121dp"
        android:layout_height="106dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="30dp"
        android:text="Submit\nReview"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/chipTakeClassAgain"
        app:layout_constraintTop_toBottomOf="@+id/courseGradeBox" />


</androidx.constraintlayout.widget.ConstraintLayout>