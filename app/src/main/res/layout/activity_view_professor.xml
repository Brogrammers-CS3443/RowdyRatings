<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfessorReviewsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:background="#112266"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="0dp">


        <TextView
            android:id="@+id/textPlaceHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:background="#FAF7F7"
            android:gravity="center"
            android:textSize="20sp"
            android:text="Hend Alkitawwi"
            tools:text="Hend Alkitawwi" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="#112266"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="0dp">
            <Button
                android:id="@+id/courseButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CS3443" />
            <Button
                android:id="@+id/courseButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CS3443" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="#112266"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >


                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:textColor="#FFFEFE"
                    android:textSize="25sp"
                    android:text="4.0 / 5"
                    tools:text="4.0 / 5" />

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFEFE"
                    android:textSize="25sp"
                    android:padding="20dp"
                    android:text="76%"
                    tools:text="76%"/>
                <TextView
                    android:id="@+id/text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFEFE"
                    android:textSize="25sp"
                    android:padding="20dp"
                    android:text="3.0"
                    tools:text="3.0"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/overallRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFEFE"
                    android:textSize="20sp"
                    android:padding="10dp"
                    android:text="Rating"
                    tools:text="Rating"/>

                <TextView
                    android:id="@+id/wouldTakeAgain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFEFE"
                    android:textSize="17sp"
                    android:padding="10dp"
                    android:text="Would Take Again"
                    tools:text="Would Take Again"/>

                <TextView
                    android:id="@+id/levelDifficulty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="#FFFEFE"
                    android:textSize="15sp"
                    android:text="Level of Difficulty"
                    tools:text="Level of Difficulty" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/reviewButton1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFEFE"
        android:background="#112266"
        android:text="CS 3443                                                      June 2nd, 2024" />

    <TextView
        android:id="@+id/reviewButton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFEFE"
        android:background="#112266"
        android:text="Rating                                                                                        \n4.0 \t\t\t\t\t\t\tAttendance: Mandatory, Would Take Again: Yes, Grade: B+
                        \nDifficulty\n2.0 \t \t\t\t\t\t\tGreat Class. Lectures are concise and straight to the \t\t\t\t\t\t\t\t\t\tpoint" />

    <TextView
        android:id="@+id/reviewButton3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFEFE"
        android:background="#112266"
        android:text="CS 3443                                                      July 13th, 2024" />
    <TextView
        android:id="@+id/review2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFEFE"
        android:background="#112266"
        android:textSize="17sp"
        android:padding="10dp"
        android:text="Would Take Again"
        tools:text="Rating                                                                                        \n4.0 \tAttendance: Mandatory, Would Take Again: Yes, Grade: B+
                        \nDifficulty\n2.0 \t Great Class. Lectures are concise and straight to the point"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:srcCompat="@android:drawable/ic_menu_add" />
</LinearLayout>